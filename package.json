{
  "name": "my-portfolio-npm",
  "version": "1.0.0",
  "main": "index.js",
"scripts": {
  "start": "npm-run-all --parallel watch-sass watch-js watch-html watch-assets serve",
  "watch-sass": "sass --watch src/sass/main.scss:src/css/main.css --style=expanded",
  "watch-js": "chokidar 'src/js/**/*.js' -c 'npm run copy-js'",
  "watch-html": "chokidar 'src/**/*.html' -c 'npm run copy-html'",
  "watch-assets": "chokidar 'src/assets/**/*' -c 'npm run copy-assets'",
  "serve": "live-server src",
  "copy-html": "cp -r src/index.html dist/index.html",
  "copy-css": "cp -r src/css/main.css dist/css/main.css",
  "copy-js": "cp -r src/js/main.js dist/js/main.js",
  "copy-assets": "cp -r src/assets dist/assets",
  "build": "npm-run-all build-html build-css build-js build-assets",
  "build-html": "html-minifier --collapse-whitespace --remove-comments --minify-css true --minify-js true src/index.html -o dist/index.html",
  "build-css": "sass src/sass/main.scss | postcss -o dist/css/main.css",
  "build-js": "uglifyjs src/js/main.js -o dist/js/main.js",
  "build-assets": "cp -r src/assets dist/assets"
}
,
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "cssnano": "^7.0.4",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.6",
    "uglify-js": "^3.18.0"
  }
}
